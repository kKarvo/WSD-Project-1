<% layout("./layouts/layout.eta") %>
<h1>Shared shopping lists</h1>
<% if (Number(it.list_n.count) !== 0) { %>
<h2>Statistics:</h2>
<ul>
    <li>Shopping lists: <%=it.list_n.count%></li>
    <li>Shopping list items: <%=it.item_n.count%></li>
</ul>
<%} else { %>
<h2>No shopping lists yet.</h2>
<% } %>
<a href="/lists">Lists</a>